<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistroFragment">

    <TextView
        android:id="@+id/tvRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:gravity="center"
        android:text="Registrate"
        android:textColor="#333333"
        android:textSize="34sp"
        android:translationY="-70dp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUsernameR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:paddingLeft="5dp"
            android:text="Username"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etUsernameR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="start"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="#333333"
            android:textColorHighlight="#0fc3e8"
            android:textColorHint="#888"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvCorreoR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:paddingLeft="5dp"
            android:text="Correo electronico"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etCorreoR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="start"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textColor="#333333"
            android:textColorHighlight="#0fc3e8"
            android:textColorHint="#888"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvContraR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:text="Contraseña"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etContraR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="center|start"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#888"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#45b39d"
        android:fontFamily="@font/baloo_da"
        android:text="Confirmar"
        app:cornerRadius="50dp" />

</LinearLayout>