<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".PerfilFragment">

    <LinearLayout
        android:id="@+id/Cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCorreoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:text="Username"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvSaldoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:text="Saldo: 300,46€"
                android:textColor="#000000" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btEditar"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:src="@drawable/edit_img" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDatosPersonales"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:paddingBottom="5dp"
                android:text="Datos Personales"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvNombreP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_da"
                android:text="Nombre Personal"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etNombreP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:contextClickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/baloo_da"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textColorHint="#7C121212"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvUsernameP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_da"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etUsernameP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:contextClickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/baloo_da"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textColorHint="#7C121212"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_da"
                android:inputType="phone"
                android:text="Numero de contacto"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etTelefonoP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:contextClickable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/baloo_da"
                android:hint="Teléfono"
                android:inputType="phone"
                android:textColor="#333333"
                android:textColorHint="#7C121212"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btConfirmar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Confirmar"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/tvRetirarDinero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text="Retirar Dinero"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btRetirarDinero"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Retirar Dinero"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/tvPoliticasCondiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_da"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text="Politicas y Condiciones"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/btPoliticas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingRight="40dp">

                <ImageView
                    android:id="@+id/imgprivacidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:paddingRight="20dp"
                    android:src="@drawable/info" />

                <TextView
                    android:id="@+id/tvPrivacidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/baloo_da"
                    android:text="Politicas de privacidad"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btTerminos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingRight="40dp">

                <ImageView
                    android:id="@+id/imgTerminos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:paddingRight="20dp"
                    android:src="@drawable/info" />

                <TextView
                    android:id="@+id/tvPoliticas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:fontFamily="@font/baloo_da"
                    android:text="Terminos de servicio"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvNotificaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_da"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text="Notificaciones"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/btNoti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:src="@drawable/notificaciones" />

                <TextView
                    android:id="@+id/tvNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:text="Notificaciones"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/barra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/linea_horizontal" />

            <LinearLayout
                android:id="@+id/btCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="100dp"
                android:paddingRight="40dp"
                android:paddingBottom="40dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:id="@+id/tvCerrarSesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_da"
                    android:text="Cerrar sesión"
                    android:textColor="#00BCD4"
                    android:textColorLink="#00BCD4"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>