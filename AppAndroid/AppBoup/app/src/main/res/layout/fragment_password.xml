<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    tools:context=".Fragments.PasswordFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRegistrar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baloo_da"
        android:gravity="center"
        android:text="Recuperar contraseÃ±a"
        android:textColor="#333333"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCorreoRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:paddingLeft="5dp"
            android:text="Correo electronico"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etCorreoRe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="start"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:textColor="#333333"
            android:textColorHighlight="#0fc3e8"
            android:textColorHint="#888"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvRegistroR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo_da"
        android:text="No tienes cuenta? Registrate!"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnRecuperar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#45b39d"
        android:fontFamily="@font/baloo_da"
        android:text="Recuperar"
        android:textSize="16sp"
        app:cornerRadius="50dp" />

</LinearLayout>