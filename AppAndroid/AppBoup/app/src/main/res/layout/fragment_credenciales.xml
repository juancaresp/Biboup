<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Fragments.CredencialesFragment">

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:gravity="center"
        android:text="Bienvenido"
        android:textColor="#333333"
        android:textColorHint="#0fc3e8"
        android:textSize="34sp"
        android:translationY="-100dp" />

    <TextView
        android:id="@+id/tvIntroduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_da"
        android:gravity="center"
        android:text="Por favor introduzca sus credenciales de usuario"
        android:textColor="#333333"
        android:textColorHint="#0fc3e8"
        android:textSize="20sp"
        android:translationY="-80dp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:paddingLeft="5dp"
            android:text="Nombre Personal"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNombreC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="start"
            android:inputType="textPersonName"
            android:textColor="#333333"
            android:textColorHighlight="#0fc3e8"
            android:textColorHint="#0fc3e8"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTelefonoC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/baloo_da"
            android:gravity="start"
            android:paddingLeft="5dp"
            android:text="TelÃ©fono"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etTelefonoC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:fontFamily="@font/baloo_da"
            android:foregroundGravity="center"
            android:gravity="center|start"
            android:inputType="phone"
            android:textColor="#333333"
            android:textColorHint="#0fc3e8"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/botonC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#45b39d"
        android:fontFamily="@font/baloo_da"
        android:text="Siguiente"
        android:textSize="16sp"
        app:cornerRadius="50dp" />

</LinearLayout>